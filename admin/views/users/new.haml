#inner.row
  = partial 'partials/nav/pages'
  %section#body
    =flash_tag :error
    %form.row{:action => url(:users, :create), :method => "post"}
      %section.row
        %p.sixcol
          %input{:name => "user[name]", :placeholder => "Name", :type => "text"}/
        %p.sixcol.last
          %input{:name => "user[surname]", :placeholder => "Surname", :type => "text"}/
      %section.row
        %p.sixcol
          %input{:name => "user[email]", :placeholder => "Email", :type => "email"}/
        %p.sixcol.last
          %input{:name => "user[password]", :placeholder => "Password", :type => "password"}/
      %section.row
        %p.sixcol
        %p.sixcol.last
          %button.green{:type => "submit", :value => "Create"} Create
