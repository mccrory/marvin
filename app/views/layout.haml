  %head
    %meta{:charset => "UTF-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    
    %title= Blog.name
    
    %meta{:content => Blog.description, :name => "description"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    
    %link{:href => "/img/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "/img/apple-touch-icon.png", :rel => "apple-touch-icon"}
    %link{:href => "/css/gyaku.css", :rel => "stylesheet"}
    %link{:href => "/css/application.css", :rel => "stylesheet"}
    %link{:href => Blog.feed, :rel => "alternate", :type => "application/rss+xml"}
    
    %script{:src => "/jsc/lib/modernizr-1.7.min.js"}
  %body
    #contain
      %header.row
        %h1
          %a{:href => url(:index)}= Blog.name
        %nav
          %ul
            - @pages.each do |page|
              %li
                %a{:href => url(:page, :permalink => page.permalink)}= page.title
      #main.row.articles{:role => "main"}
        
        =yield
        
        
      %footer.row
        %p
          Powered by
          = succeed "." do
            %a{:href => "#"} Marvin
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"}
